<!-- The header ejs template is included to ensure our CSS and fonts are loaded -->
<%- include('partials/header') %>
    <div id="completion_main_box">
        <h1>Quiz Completed!</h1>
        <p>You answered a total of <strong><%= totalCorrect %></strong> questions correctly.</p>

        <% if (isBest) { %>
            <h2>Congratulations! This is your best result!</h2>
        <% } else { %>
            <p>Your best result so far is <strong><%= bestResult %></strong>.</p>
        <% } %>

        <a href="/quiz">Try Again</a>
        <a href="/">Back to Home</a>
    </div>
</body>
</html>